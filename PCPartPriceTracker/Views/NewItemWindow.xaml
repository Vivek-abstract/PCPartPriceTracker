<Window x:Class="PCPartPriceTracker.NewItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCPartPriceTracker"
        xmlns:newItemVm="clr-namespace:ViewModels;assembly=ViewModels"
        mc:Ignorable="d"
        Title="NewItemWindow" Height="450" Width="800">
    <Window.Resources>
        <newItemVm:NewItemVM x:Key="newItemVm" OnRequestClose="NewItemVM_OnRequestClose"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource newItemVm}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="543*"/>
            <ColumnDefinition Width="257*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="15,15,15,15" Grid.ColumnSpan="2">
            <TextBlock Text="Name" Margin="0 5 0 0" />
            <TextBox Text="{Binding Product.Name, Mode=TwoWay}"/>
            <TextBlock Text="URL"  Margin="0 5 0 0"/>
            <TextBox Text="{Binding Product.Url, Mode=TwoWay}"/>
            <TextBlock Text="Target Price (₹)"  Margin="0 5 0 0"/>
            <TextBox Text="{Binding Product.TargetPrice, Mode=TwoWay}"/>
            <Button  Content="Add"  Margin="0 5 0 0"  Command="{Binding AddProductCommand}"/>
        </StackPanel>
    </Grid>
</Window>
